// This is an SVG-based insights demo
<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="800" height="600" fill="#ffffff"/>
  
  <!-- Header -->
  <rect x="0" y="0" width="800" height="60" fill="#f8fafc"/>
  <text x="30" y="38" font-family="Arial" font-size="20" font-weight="bold" fill="#1e293b">AI Insights</text>
  
  <!-- Main Content -->
  <g transform="translate(30, 80)">
    <!-- Sentiment Analysis Card -->
    <rect x="0" y="0" width="480" height="200" rx="8" fill="#ffffff" stroke="#e2e8f0"/>
    <text x="20" y="30" font-family="Arial" font-size="16" font-weight="bold" fill="#1e293b">Sentiment Analysis</text>
    <!-- Sentiment Bars -->
    <g transform="translate(20, 60)">
      <rect x="0" y="0" width="300" height="20" rx="4" fill="#22c55e" opacity="0.2"/>
      <rect x="0" y="0" width="240" height="20" rx="4" fill="#22c55e"/>
      <text x="310" y="15" font-family="Arial" font-size="14" fill="#22c55e">Positive (80%)</text>
      
      <rect x="0" y="30" width="300" height="20" rx="4" fill="#eab308" opacity="0.2"/>
      <rect x="0" y="30" width="45" height="20" rx="4" fill="#eab308"/>
      <text x="310" y="45" font-family="Arial" font-size="14" fill="#eab308">Neutral (15%)</text>
      
      <rect x="0" y="60" width="300" height="20" rx="4" fill="#ef4444" opacity="0.2"/>
      <rect x="0" y="60" width="15" height="20" rx="4" fill="#ef4444"/>
      <text x="310" y="75" font-family="Arial" font-size="14" fill="#ef4444">Negative (5%)</text>
    </g>
    
    <!-- Trending Topics -->
    <rect x="500" y="0" width="230" height="200" rx="8" fill="#ffffff" stroke="#e2e8f0"/>
    <text x="520" y="30" font-family="Arial" font-size="16" font-weight="bold" fill="#1e293b">Trending Topics</text>
    <g transform="translate(520, 50)">
      <circle cx="10" cy="20" r="4" fill="#3b82f6"/>
      <text x="25" y="25" font-family="Arial" font-size="14" fill="#64748b">Billing Issues (45%)</text>
      
      <circle cx="10" cy="50" r="4" fill="#6366f1"/>
      <text x="25" y="55" font-family="Arial" font-size="14" fill="#64748b">Login Problems (30%)</text>
      
      <circle cx="10" cy="80" r="4" fill="#8b5cf6"/>
      <text x="25" y="85" font-family="Arial" font-size="14" fill="#64748b">Feature Requests (25%)</text>
    </g>
    
    <!-- AI Recommendations -->
    <rect x="0" y="220" width="730" height="220" rx="8" fill="#ffffff" stroke="#e2e8f0"/>
    <text x="20" y="250" font-family="Arial" font-size="16" font-weight="bold" fill="#1e293b">AI Recommendations</text>
    
    <g transform="translate(20, 270)">
      <!-- Recommendation 1 -->
      <rect x="0" y="0" width="690" height="80" rx="6" fill="#f8fafc"/>
      <text x="20" y="30" font-family="Arial" font-size="14" font-weight="bold" fill="#1e293b">Implement Automated Billing FAQ</text>
      <text x="20" y="55" font-family="Arial" font-size="14" fill="#64748b">High impact opportunity: 45% of support tickets are billing-related.</text>
      <rect x="550" y="20" width="120" height="30" rx="15" fill="#3b82f6" opacity="0.1"/>
      <text x="570" y="40" font-family="Arial" font-size="14" fill="#3b82f6">High Priority</text>
    </g>
  </g>
</svg> 