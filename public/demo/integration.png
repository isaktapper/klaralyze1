// This is an SVG-based integration demo
<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="800" height="600" fill="#ffffff"/>
  
  <!-- Header -->
  <rect x="0" y="0" width="800" height="60" fill="#f8fafc"/>
  <text x="30" y="38" font-family="Arial" font-size="20" font-weight="bold" fill="#1e293b">Platform Integrations</text>
  
  <!-- Main Content -->
  <g transform="translate(30, 80)">
    <!-- Integration Cards -->
    <g>
      <!-- Zendesk -->
      <rect x="0" y="0" width="230" height="160" rx="8" fill="#ffffff" stroke="#e2e8f0"/>
      <circle cx="115" cy="50" r="30" fill="#3b82f6" opacity="0.1"/>
      <text x="95" y="60" font-family="Arial" font-size="24" fill="#3b82f6">Z</text>
      <text x="85" y="100" font-family="Arial" font-size="16" font-weight="bold" fill="#1e293b">Zendesk</text>
      <rect x="65" y="120" width="100" height="24" rx="12" fill="#22c55e"/>
      <text x="85" y="136" font-family="Arial" font-size="12" fill="white">Connected</text>
      
      <!-- Intercom -->
      <rect x="250" y="0" width="230" height="160" rx="8" fill="#ffffff" stroke="#e2e8f0"/>
      <circle cx="365" cy="50" r="30" fill="#8b5cf6" opacity="0.1"/>
      <text x="355" y="60" font-family="Arial" font-size="24" fill="#8b5cf6">I</text>
      <text x="335" y="100" font-family="Arial" font-size="16" font-weight="bold" fill="#1e293b">Intercom</text>
      <rect x="315" y="120" width="100" height="24" rx="12" fill="#3b82f6"/>
      <text x="335" y="136" font-family="Arial" font-size="12" fill="white">Connect</text>
      
      <!-- Freshdesk -->
      <rect x="500" y="0" width="230" height="160" rx="8" fill="#ffffff" stroke="#e2e8f0"/>
      <circle cx="615" cy="50" r="30" fill="#6366f1" opacity="0.1"/>
      <text x="605" y="60" font-family="Arial" font-size="24" fill="#6366f1">F</text>
      <text x="585" y="100" font-family="Arial" font-size="16" font-weight="bold" fill="#1e293b">Freshdesk</text>
      <rect x="565" y="120" width="100" height="24" rx="12" fill="#3b82f6"/>
      <text x="585" y="136" font-family="Arial" font-size="12" fill="white">Connect</text>
    </g>
    
    <!-- Connection Status -->
    <rect x="0" y="180" width="730" height="120" rx="8" fill="#ffffff" stroke="#e2e8f0"/>
    <text x="20" y="210" font-family="Arial" font-size="16" font-weight="bold" fill="#1e293b">Connection Status</text>
    <g transform="translate(20, 230)">
      <circle cx="10" cy="10" r="6" fill="#22c55e"/>
      <text x="25" y="15" font-family="Arial" font-size="14" fill="#64748b">Last sync: 2 minutes ago</text>
      <text x="25" y="35" font-family="Arial" font-size="14" fill="#64748b">Tickets synced: 1,234</text>
      <text x="25" y="55" font-family="Arial" font-size="14" fill="#64748b">Data up to date</text>
    </g>
    
    <!-- Setup Guide -->
    <rect x="0" y="320" width="730" height="160" rx="8" fill="#ffffff" stroke="#e2e8f0"/>
    <text x="20" y="350" font-family="Arial" font-size="16" font-weight="bold" fill="#1e293b">Quick Setup Guide</text>
    <g transform="translate(20, 370)">
      <circle cx="15" cy="15" r="12" fill="#3b82f6" opacity="0.1"/>
      <text x="11" y="20" font-family="Arial" font-size="14" fill="#3b82f6">1</text>
      <text x="40" y="20" font-family="Arial" font-size="14" fill="#64748b">Select your platform</text>
      
      <circle cx="15" cy="45" r="12" fill="#3b82f6" opacity="0.1"/>
      <text x="11" y="50" font-family="Arial" font-size="14" fill="#3b82f6">2</text>
      <text x="40" y="50" font-family="Arial" font-size="14" fill="#64748b">Authorize connection</text>
      
      <circle cx="15" cy="75" r="12" fill="#3b82f6" opacity="0.1"/>
      <text x="11" y="80" font-family="Arial" font-size="14" fill="#3b82f6">3</text>
      <text x="40" y="80" font-family="Arial" font-size="14" fill="#64748b">Start analyzing your data</text>
    </g>
  </g>
</svg> 